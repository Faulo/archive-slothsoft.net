<?xml version="1.0" encoding="UTF-8"?><xsl:stylesheet version="1.0" xmlns="http://www.w3.org/1999/xhtml"	xmlns:xsl="http://www.w3.org/1999/XSL/Transform">	<xsl:template match="/table">		<html>			<head>				<title>					<xsl:value-of select="@name" />				</title>				<style type="text/css"><![CDATA[/*tr:nth-child(even) {	background-color:#f3f3f3;}*/thead th {	border-bottom:1px solid #111;	text-align: center;}tbody td {	white-space: pre;	border-bottom: 1px solid rgba(0, 0, 0, 0.2);}tbody th {	font-family: monospace;	text-align: right;}tr[data-status] {	background-color: rgba(0, 255, 0, 0.2);}tr[data-status~="0"] {	background-color: rgba(255, 255, 0, 0.2);}tr[data-status^="0"] {	background-color: rgba(255, 0, 0, 0.2);}tr[data-flags~="N"] {	opacity: 0.5;}pre {	margin: 0;}			]]></style>			</head>			<body>				<h1>					<xsl:value-of select="@name" />				</h1>				<pre><![CDATA[Quellpfad := Quellpfad(Ebene - 1) + "/" + DatenattributZielpfad := Zugriffspfad + "/" + Objekttyp + "/" + Objekttypinformation]]></pre>				<table>					<thead>						<xsl:for-each select="head">							<tr>								<th>#</th>								<xsl:for-each select="cell">									<th>										<xsl:value-of select="@val" />									</th>								</xsl:for-each>							</tr>						</xsl:for-each>					</thead>					<tbody>						<xsl:for-each select="row">							<tr data-status="{@status}" data-flags="{cell[@key='Vermerke']/@val}">								<th>									<xsl:value-of select="position()" />								</th>								<xsl:for-each select="cell">									<td title="{@key}">										<xsl:value-of select="@val" />									</td>								</xsl:for-each>							</tr>						</xsl:for-each>					</tbody>				</table>			</body>		</html>	</xsl:template></xsl:stylesheet>